# Root editor config file
root = true

# Common settings
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = tab
indent_size = 4

# Python
[*.py]
max_line_length = 110

# Nix
[*.nix]
indent_style = space
indent_size = 2

# C
[*.{c,h}]
indent_style = space
indent_size = 2

# JSON/YAML
[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
